@model SaniShop.Models.SalesDetailModel
@{
    ViewBag.Title = "Index";
}

<h2>Sales Report</h2>


@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Calender/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Calender/bootstrap/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />    
    <meta name="viewport" content="width=device-width" />
    <title>Sales Report</title>
</head>
<body>
    

    
    <div>

        <table class="table" style="width:auto">
            <tr>
                <td align="left">SupplierName</td>

                <td>
                    @Html.DropDownListFor(m => m.Product_id, Model.Productname, "--Select Product--",
                       new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <td align="left">WattMaster</td>

                <td>

                    @Html.DropDownListFor(m => m.Product_id, Model.wattmain, "--Select Watt--",
                 new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <td align="left">Sales from</td>

                <td>

                    <div class="control-group">
                        
                        <div class="controls input-append date form_datetime" data-date="1979-09-16T05:25:07Z" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                            <input size="16" type="text" value="" readonly>
                            <span class="add-on"><i class="icon-remove"></i></span>
                            <span class="add-on"><i class="icon-th"></i></span>
                        </div>
                        <input type="hidden" id="dtp_input1" value="" /><br />
                    </div>
                </td>
            </tr>
            <tr>
                <td align="left">Sales to</td>

                <td>

                    <div class="control-group">
                        
                        <div class="controls input-append date form_datetime" data-date="1979-09-16T05:25:07Z" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                            <input size="16" type="text" value="" readonly>
                            <span class="add-on"><i class="icon-remove"></i></span>
                            <span class="add-on"><i class="icon-th"></i></span>
                        </div>
                        <input type="hidden" id="dtp_input1" value="" /><br />
                    </div>
                </td>
            </tr>
            <tr>
                <td align="center"></td>
                <td>
                    <input type="submit" value="save" id="save" name="save" />
                </td>
            </tr>
        </table>
        
    </div>


</body>
</html>

<script src="~/Calender/jquery/jquery-1.8.3.min.js" charset="UTF-8"></script>

<script src="~/Calender/bootstrap/js/bootstrap.min.js"></script>

<script src="~/Calender/bootstrap/js/bootstrap-datetimepicker.js"></script>

<script src="~/Calender/bootstrap/js/bootstrap-datetimepicker.fr.js"></script>


<script type="text/javascript" src="../js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
<script type="text/javascript" src="../js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>



<script type="text/javascript">
    $('.form_datetime').datetimepicker({
        //language:  'fr',
        weekStart: 1,
        todayBtn:  1,
		autoclose: 1,
		todayHighlight: 1,
		startView: 2,
		forceParse: 0,
        showMeridian: 1
    });
	$('.form_date').datetimepicker({
        language:  'fr',
        weekStart: 1,
        todayBtn:  1,
		autoclose: 1,
		todayHighlight: 1,
		startView: 2,
		minView: 2,
		forceParse: 0
    });
	$('.form_time').datetimepicker({
        language:  'fr',
        weekStart: 1,
        todayBtn:  1,
		autoclose: 1,
		todayHighlight: 1,
		startView: 1,
		minView: 0,
		maxView: 1,
		forceParse: 0
	});
	$("#save").click(function () {
	    $.ajax({
	        url: '/SalesReport/Index',
	        type: "GET",
	        success: function (data) {
	            jQuery.trim(jQuery('#Product_id').val());
	            jQuery.trim(jQuery('#Product_id').val());


	        }

	    });
	});
</script>

